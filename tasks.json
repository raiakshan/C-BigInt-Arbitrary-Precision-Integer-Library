{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++17",
                "-Wall",
                "-Wextra",
                "-O3",
                "-I", "include",
                "src/BigInt.cpp",
                "src/main.cpp",
                "-o", "bigint_demo.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "run",
            "type": "shell",
            "command": "./bigint_demo.exe",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "dependsOn": ["build"],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "Remove-Item",
            "args": [
                "-Force",
                "-ErrorAction", "SilentlyContinue",
                "*.exe",
                "src/*.o"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        }
    ]
}